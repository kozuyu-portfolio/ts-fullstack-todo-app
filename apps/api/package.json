{
    "name": "@ts-fullstack-todo/api",
    "version": "0.0.1",
    "description": "",
    "author": "",
    "private": "false",
    "license": "UNLICENSED",
    "scripts": {
        "build": "nest build",
        "start": "nest start",
        "start:dev": "nest start --watch",
        "start:debug": "nest start --debug --watch",
        "start:prod": "node dist/main",
        "test": "vitest run --config vitest.config.mts",
        "test:watch": "vitest",
        "test:cov": "vitest run --coverage",
        "test:debug": "vitest --inspect-brk --inspect --logHeapUsage --poolOptions.threads.singleThread",
        "test:e2e": "vitest run --config vitest.config.e2e.mts",
        "test:e2e:watch": "vitest --config vitest.config.e2e.mts",
        "test:e2e:cov": "vitest run --config vitest.config.e2e.mts --coverage",
        "test:e2e:debug": "vitest --config vitest.config.e2e.mts --inspect-brk --inspect --logHeapUsage --poolOptions.threads.singleThread",
        "docker:build": "docker build -t todo-api:dev  -f Dockerfile ../../",
        "docker:run": "docker run --rm --name todo-api -p 8080:3000 todo-api:dev",
        "docker:stop": "docker stop todo-api"
    },
    "dependencies": {
        "@aws-sdk/client-s3": "^3.812.0",
        "@aws-sdk/client-sesv2": "^3.817.0",
        "@aws-sdk/s3-request-presigner": "^3.812.0",
        "@nestjs/common": "^11.0.1",
        "@nestjs/core": "^11.0.1",
        "@nestjs/jwt": "^11.0.0",
        "@nestjs/passport": "^11.0.5",
        "@nestjs/platform-express": "^11.0.1",
        "@prisma/client": "^6.7.0",
        "argon2": "^0.43.0",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.2",
        "cookie-parser": "^1.4.7",
        "ioredis": "^5.6.1",
        "jsonwebtoken": "^9.0.2",
        "mime-types": "^3.0.1",
        "ms": "^2.1.3",
        "nodemailer": "^7.0.3",
        "passport": "^0.7.0",
        "passport-jwt": "^4.0.1",
        "reflect-metadata": "^0.2.2",
        "rxjs": "^7.8.1"
    },
    "devDependencies": {
        "@eslint/eslintrc": "^3.2.0",
        "@eslint/js": "^9.18.0",
        "@nestjs/cli": "^11.0.0",
        "@nestjs/schematics": "^11.0.0",
        "@nestjs/swagger": "^11.2.0",
        "@nestjs/testing": "^11.0.1",
        "@swc/cli": "^0.6.0",
        "@swc/core": "^1.10.7",
        "@types/cookie-parser": "^1.4.9",
        "@types/express": "^5.0.0",
        "@types/jest": "^29.5.14",
        "@types/jsonwebtoken": "^9.0.9",
        "@types/mime-types": "^2.1.4",
        "@types/ms": "^2.1.0",
        "@types/node": "^22.10.7",
        "@types/nodemailer": "^6.4.17",
        "@types/passport-jwt": "^4.0.1",
        "@types/supertest": "^6.0.2",
        "@vitest/coverage-v8": "3.1.3",
        "@vitest/ui": "^3.1.3",
        "aws-sdk-client-mock": "^4.1.0",
        "aws-sdk-client-mock-vitest": "^6.1.1",
        "dotenv": "^16.5.0",
        "eslint": "^9.18.0",
        "eslint-config-prettier": "^10.0.1",
        "eslint-plugin-prettier": "^5.2.2",
        "globals": "^16.0.0",
        "jest": "^29.7.0",
        "prettier": "^3.4.2",
        "prisma": "^6.7.0",
        "source-map-support": "^0.5.21",
        "supertest": "^7.1.0",
